<h1>My feeds</h1>

<%= link_to image_tag("https://img.icons8.com/color/48/000000/new-by-copy.png"), new_feed_path %>

<% @feeds.each do |feed| %>
<article class="feed">
  <p class="content">
    <strong><%= feed.user.name %></strong>
  </p>
  <hr>
  <% if feed.image && feed.image.url %>
  <%= image_tag feed.image.url(), class: "image" %>
  <% end %>


  <br>
  <small><%= feed.created_at.strftime('%Y/%-m/%-d %-H:%-M') %></small>
  <br>
  <%= link_to image_tag("https://img.icons8.com/color/48/000000/show-property.png"), feed %>
  <%= link_to image_tag("https://img.icons8.com/dusk/64/000000/edit-user-female.png"), edit_feed_path(feed) %>
  <%= link_to image_tag("https://img.icons8.com/android/24/000000/trash.png"),feed, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  <br><br>
</article>
<% end %>
