<%= form_with(model: @feed, local: true, url:choose_new_or_edit) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th class="title"><%= form.label :title %></th>
      <td class="title"><%= form.text_field :title %></td>
    </tr>
    <tr>
      <th class="content"><%= form.label :content %></th>
      <br>
      <td class="content"><%= form.text_field :content %></td>
    </tr>
  </table>

  <div class="image">
    <%= form.label :image %>
    <%= image_tag(@feed.image.url)if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <%= form.hidden_field :user_id,value: current_user.id %>
  </div>
  <div class="field">

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
